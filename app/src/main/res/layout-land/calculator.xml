<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >

        <TextView
            android:id="@+id/idHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="#f7f7f7"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:text=""
            android:textColor="#000000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        >

        <TextView
            android:id="@+id/tv_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:background="#f7f7f7"
            android:textSize="40sp"
            android:hint="Main 12345567890"
            android:textColorHint="#dcdcdc"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLayoutButtons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:paddingTop="5dp"
        android:background="#76B3FF"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"

                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="66"
                    android:background="#767676"
                    android:onClick="onSwitch"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    >

                    <TextView
                        android:id="@+id/idRad"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:background="#767676"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:text="RAD"
                        />

                    <TextView
                        android:id="@+id/idDeg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#767676"
                        android:layout_weight="50"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="DEG"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_x"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="x!"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn_inv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="inv"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
                <Button
                    android:id="@+id/btn_sin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="sin"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
                <Button
                    android:id="@+id/btn_ln"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="ln"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn_pi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="pi"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
                <Button
                    android:id="@+id/btn_cos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="cos"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
                <Button
                    android:id="@+id/btn_log"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="log"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn_e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="e"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn_tan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="tan"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn_sqrt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="sqrt"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn_ans"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="ans"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/exp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="exp"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/btn_x_hat_y"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:background="#767676"
                    android:text="x^y"
                    android:textColor="#dcdcdc"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="92.5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/btn_leftBracket"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="("
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_rightBracket"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text=")"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_percent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="%"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_DEL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="DEL"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    >

                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="7"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="8"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="9"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_division"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="/"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="4"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="5"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="6"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_multiply"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="*"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="1"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="2"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="3"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_minus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="-"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/btn_dot"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="."
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="0"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_equals"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#505050"
                        android:text="="
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="#767676"
                        android:text="+"
                        android:textColor="#dcdcdc"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                >

                <Button
                    android:id="@+id/btn_CE"
                    android:background="#76B3FF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>